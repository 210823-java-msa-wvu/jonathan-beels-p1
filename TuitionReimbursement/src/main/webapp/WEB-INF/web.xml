<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>

    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>com.revature.servlets.LoginServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Menu</servlet-name>
        <servlet-class>com.revature.servlets.MenuServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Menu</servlet-name>
        <url-pattern>/menu</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Requests</servlet-name>
        <servlet-class>com.revature.servlets.RequestServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Requests</servlet-name>
        <url-pattern>/requests</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Grade</servlet-name>
        <servlet-class>com.revature.servlets.GradeServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Grade</servlet-name>
        <url-pattern>/grade</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Approval</servlet-name>
        <servlet-class>com.revature.servlets.ApprovalServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Approval</servlet-name>
        <url-pattern>/approval</url-pattern>
    </servlet-mapping>
</web-app>